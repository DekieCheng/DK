@using SDPSubSystem.Web.Common;
@{
    ViewBag.Title = "ePPSTriggerDashboardByLine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="panel panel-default">
        <!-- Table -->
        <table id="tab_table" class="table table-striped table-hover table-bordered tableWidth ">
            <thead>
                <tr>
                    <th>Project</th>
                    <th>WO</th>
                    <th>PN</th>
                    <th>QTY</th>
                    <th>Line</th>
                    <th>EPL(15)</th>
                    <th>AMR(12)</th>
                    <th>Tooling_Top(3)</th>
                    <th>Tooling_Bot(3)</th>
                    <th>PlanProductionTime</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

</div>
<div class="modal fade bs-example-modal-lg" id="_Dialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<input id="Line" hidden="hidden" value="@ViewData["Line"]" />
<style type="text/css">

    td {
        border: 1px solid black;
        height: 45px;
        font-size: 18px;
        font-weight: 300;
    }

    th {
        height: 45px;
        font-size: 18px;
    }


    .bb {
        font-weight: bold;
        font-size: 17px;
        text-align: center !important;
    }
</style>

<script type="text/javascript">

    var _cols = ["Project", "WO", "PN", "QTY", "Line", "EPL_Msg", "AMR_Msg", "eTool_Msg_Top", "eTool_Msg_Bot",  "PlanProductionTime"];
    var _editcol = "";
    var _tableName = "tab_table";
    $(function () {
        loadData();
        setInterval(loadData, 30000);
        $('#selectAll').click(function () {
            if ($(this).is(":checked")) {
                $('#tab_table tbody input[name="selectid"]').prop("checked", true);
            }
            else {
                $('#tab_table tbody input[name="selectid"]').prop("checked", false);
            }
        });



    })

    function loadData() {

        if ($('#tab_table tbody').html() != "") {
            $('#tab_table').dataTable().fnDestroy();
        }
        postLoadTableEPPSTriggerData('@Url.Action("GetePPSTriggerDatabyLine")', _tableName, _cols);

    }

    function isNull(data) {
        return (data == "" || data == undefined || data == null) ? true : false;
    }

    function postLoadTableEPPSTriggerData(url, tableName, cols) {

        var height = parseInt($("body").css("height").replace("px", "")) - 140;
        var defs = [];
        for (var i = 0; i < cols.length; i++) {
            if (cols[i] == "EPL_Msg") {
                defs.push({
                    "className": "text-center", "targets": i, "orderable": false, "data": cols[i], "render": function (data, type, full, meta) {
                        if (isNull(data)) {
                            return data;
                        }
                        var cutoff = 5;
                        if (type === 'display') {
                            var str = data.toString(); // cast numbers
                            return str.length < cutoff ?
                                str :
                                "<span style='display:none'>" + str + "</span><span title='" + str + "' value=" + str + ">" + str.substr(0, cutoff - 1) + '&#8230;</span>';
                        }
                    },
                    "createdCell": function (td, cellData, rowData, row, col) {
                        /*
                        0--未发送			灰色
                        1--已发送			蓝色
                        2--接收成功			绿色
                        3--接收失败			红色
                        4--未发送--已超时		黄色
                        */
                        var color = "white";
                        var status = rowData.EPL_Status;
                        if (status == 0) {
                            color = '#708090';
                        } else if (status == 1) {
                            color = '#4169E1';
                        } else if (status == 2) {
                            color = '#00CD66';
                        } else if (status == 3) {
                            color = '#EE4000';
                        } else if(status == 4) {
                            color = 'yellow';
                        }
                        $(td).css('background-color', color);
                    }
                })
            }
            else if (cols[i] == "AMR_Msg") {
                defs.push({
                    "className": "text-center", "targets": i, "orderable": false, "data": cols[i], "render": function (data, type, full, meta) {
                        if (isNull(data)) {
                            return data;
                        }
                        var cutoff = 5;
                        if (type === 'display') {
                            var str = data.toString(); // cast numbers
                            return str.length < cutoff ?
                                str :
                                "<span style='display:none'>" + str + "</span><span title='" + str + "' value=" + str + ">" + str.substr(0, cutoff - 1) + '&#8230;</span>';
                        }
                    },
                    "createdCell": function (td, cellData, rowData, row, col) {
                        /*
                        0--未发送			灰色
                        1--已发送			蓝色
                        2--接收成功			绿色
                        3--接收失败			红色
                        4--未发送--已超时		黄色
                        */
                        var color = "white";
                        var status = rowData.AMR_Status;
                        if (status == 0) {
                            color = '#708090';
                        } else if (status == 1) {
                            color = '#4169E1';
                        } else if (status == 2) {
                            color = '#00CD66';
                        } else if (status == 3) {
                            color = '#EE4000';
                        } else if(status == 4) {
                            color = 'yellow';
                        }
                        $(td).css('background-color', color);
                    }
                })
            }
            else if (cols[i] == "eTool_Msg_Top") {
                defs.push({
                    "className": "text-center", "targets": i, "orderable": false, "data": cols[i], "render": function (data, type, full, meta) {
                        if (isNull(data)) {
                            return data;
                        }
                        var cutoff = 5;
                        if (type === 'display') {
                            var str = data.toString(); // cast numbers
                            return str.length < cutoff ?
                                str :
                                "<span style='display:none'>" + str + "</span><span title='" + str + "' value=" + str + ">" + str.substr(0, cutoff - 1) + '&#8230;</span>';
                        }
                    },
                    "createdCell": function (td, cellData, rowData, row, col) {
                        /*
                        0--未发送			灰色
                        1--已发送			蓝色
                        2--接收成功			绿色
                        3--接收失败			红色
                        4--未发送--已超时		黄色
                        */
                        var color = "white";
                        var status = rowData.eTool_Top_Status;
                        if (status == 0) {
                            color = '#708090';
                        } else if (status == 1) {
                            color = '#4169E1';
                        } else if (status == 2) {
                            color = '#00CD66';
                        } else if (status == 3) {
                            color = '#EE4000';
                        } else if(status == 4) {
                            color = 'yellow';
                        }
                        $(td).css('background-color', color);
                    }
                })
            }
            else if (cols[i] == "eTool_Msg_Bot") {
                defs.push({
                    "className": "text-center", "targets": i, "orderable": false, "data": cols[i], "render": function (data, type, full, meta) {
                        if (isNull(data)) {
                            return data;
                        }
                        var cutoff = 5;
                        if (type === 'display') {
                            var str = data.toString(); // cast numbers
                            return str.length < cutoff ?
                                str :
                                "<span style='display:none'>" + str + "</span><span title='" + str + "' value=" + str + ">" + str.substr(0, cutoff - 1) + '&#8230;</span>';
                        }
                    },
                    "createdCell": function (td, cellData, rowData, row, col) {
                        /*
                        0--未发送			灰色
                        1--已发送			蓝色
                        2--接收成功			绿色
                        3--接收失败			红色
                        4--未发送--已超时		黄色
                        */
                        var color = "white";
                        var status = rowData.eTool_Bot_Status;
                        if (status == 0) {
                            color = '#708090';
                        } else if (status == 1) {
                            color = '#4169E1';
                        } else if (status == 2) {
                            color = '#00CD66';
                        } else if (status == 3) {
                            color = '#EE4000';
                        } else if (status == 4) {
                            color = 'yellow';
                        }
                        $(td).css('background-color', color);
                    }
                })
            }
            else {
                defs.push({
                    "className": "text-center", "targets": i, "orderable": false, "data": cols[i], "render": function (data, type, full, meta) {
                        return data || "";
                    }
                });
            }
        }

        //var domCustomized = "<'row'<'col-sm-12'tr>>";
        var t = $("#" + tableName).dataTable({
            //dom: domCustomized,
            autoWidth: true,
            filter: false,
            processing: true,
            serverSide: true,
            order: [],
            scrollY: height,
            scrollX: true,
            scrollCollapse: false,
            paging: true,
            paginationType: "full_numbers",
            lengthMenu: [[10, 20, 50, 100, 99999999], [10, 20, 50, 100, "All"]],
            pageLength: 50,
            lengthChange: false,
            //fixedColumns: { leftColumns: 2 },
            serverMethod: "POST",
            ajax: {
                url: url
            },
            language: {
                url: '/Content/Datatables/Lang/Lang_' + $('body').attr("LangID") + ".txt"
            },
            columnDefs: defs,
            fnServerParams: function (data) {
                data.Line = $("#Line").val();
            }

        });
    }



    // 使后打开的模态窗优先级高

    $("#_Dialog").on("show.bs.modal", ".modal", function (event) {

        var zIndex = 1040 + 10 * $(".modal:visible").length;

        $(this).css("z-index", zIndex);

    });

    //function getKey(event) {
    //    if (event.keyCode == 13) {
    //        //$('#btnSearch').click();
    //        $("#" + _tableName).DataTable().ajax.reload();
    //    }
    //}

</script>

