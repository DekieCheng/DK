ul{
    margin:0; 
    padding:0;
}
li{
    list-style:none;
}
.layout-header
{
    width:100%;
    height:50px;
    color:White;
    font-weight:bold;
    background-color:black;
    border:0px;
}
.layout-body
{
    width:100%;
    height:-moz-calc(100%-50px);
    height:-webkit-calc(100%-50px);
    height:calc(100% - 50px);
    overflow-y:hidden;
    border:0px;
}

.layout-content{
    height:-moz-calc(100%-35px);
    height:-webkit-calc(100%-35px);
    height:calc(100% - 35px);
    width:100%;
}

.layout-tab{
    background-color:#0094ff;/*#1F292F;*/
    height:35px;
    width:100%;
    border-bottom: 1px solid #000000;
    color:gray;
    font-size:10pt;
    z-index:998;
}

.cog-content{
    position: absolute;
    top: 40px;
    right: 10px;
    max-height: 300px;
    min-width: 150px;
    background-color: red;
    overflow-y: auto;
    display: none;
    background-color: #1F292F;
    border: 1px solid black;
 }

 .cog-content ul{
     text-align:left;
 }


.cog-content li {
    list-style: none;
    border: 1px solid black;
    cursor: pointer;
    padding: 8px 10px 8px 15px;
    border: none;
    border-bottom: 1px solid #000000;
    background-color: #1F292F;
    color: white;
}

.cog-content li a{
    color:white;
}
.cog-content li:hover{
    background-color:black;
}
