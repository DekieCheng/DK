ul{
    margin:0; 
    padding:0;
}
li{
    list-style:none;
}
.layout-header
{
    width:100%;
    height:45px;
    line-height:45px;
    padding-left:20px;
    color:White;
    font-weight:bold;
    background-color:#FFA7DB;
    padding-right:10px;
}
.layout-header li
{
    display:inline-block;
    height:12px;
    width:12px;
    border:1px solid white;
    cursor:pointer;
    margin-left:5px;
}
.layout-body
{
    width:100%;
    height:-moz-calc(100%-45px);
    height:-webkit-calc(100%-45px);
    height:calc(100% - 45px);
}
.layout-left
{
    float:left;
    background-color:#FCE2F1;
    height:100%;
    overflow:hidden;
    border-right:1px solid #FFA7DB;
    width:200px;
}
.layout-left-top
{
    border-bottom: 1px solid #FFA7DB;
    padding:5px 0 5px 2px;
    height:50px;
}

.layout-left-top button
{
    background-color:#FCE2F1;
    border:0px;
    color:#002744;
}

.layout-left-top li,.layout-left-top ul,.layout-left-top ul>li>a
{
    background-color:#FDF6FA;
    color:#002744;
}

.layout-left-top span
{
    font-size:25px; 
    margin-left:4px;
    color:#FFA7DB;
}

.layout-center
{
    margin:0;
    height:100%;
    overflow:hidden;
}
.layout-center-top
{
    background-color:#FCE2F1;
    height:35px;
    width:100%;
    border-bottom: 1px solid #FFA7DB;
    color:gray;
    font-size:10pt;
}
.layout-center-content
{
    height:-moz-calc(100%-35px);
    height:-webkit-calc(100%-35px);
    height:calc(100% - 35px);
    width:100%;
    overflow:hidden;
}

 .layout-splits{
    position:absolute;
    display:block;
    width:17px;
    height:61px;
    top:50%;
    border-top:10px solid transparent;
    border-left:16px solid  #FCE2F1;
    border-bottom:10px solid transparent;
    margin-top:-20px;
    cursor:pointer;
}
 .layout-splits:hover{
     border-top:10px solid transparent;
    border-left:16px solid  #FFA7DB;
    border-bottom:10px solid transparent;
 }
 .layout-splits span{
     margin-left:-16px;
     margin-top:13px;
     color:#bbbaba;
    
 }
 .layout-splits span:hover{
     color:white;
 }

 .layout-accordion {
 	width: 100%;
 	background: #FCE2F1;
 	-webkit-border-radius: 4px;
 	-moz-border-radius: 4px;
 	border-radius: 4px;
 }

.layout-accordion .layout-link {
	cursor: pointer;
	display: block;
    line-height:38px;
	color: #002744;
	font-size: 14px;
	font-weight:bold;
    position: relative;
    padding:0px 25px 0px 23px;
	border-bottom: 1px solid #FFA7DB;
	-webkit-transition: all 0.4s ease;
	-o-transition: all 0.4s ease;
	transition: all 0.4s ease;
    word-break:keep-all;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.layout-accordion li>div>span {
    position: absolute;
    display:inline-block;
    top:12px;
    left:3px;
	font-size: 16px;
	color: #FFA7DB;
	-webkit-transition: all 0.4s ease;
	-o-transition: all 0.4s ease;
	transition: all 0.4s ease;
}
.layout-accordion li>div>span.glyphicon-menu-down {
	right: 8px;
    top:14px;
    font-size:12px;
	left: auto;
}

.layout-accordion li.open>div>span.glyphicon-menu-down {
	-webkit-transform: rotate(180deg);
	-ms-transform: rotate(180deg);
	-o-transform: rotate(180deg);
	transform: rotate(180deg);
}
/**
 * Submenu
 -----------------------------*/
 .layout-submenu {
 	display: none;
 	background: #FDF6FA;
 	font-size: 14px;
 	overflow-x:hidden;
 	overflow-y:auto;
 }

 .layout-submenu li {
 	border-bottom: 1px solid #FCE2F1;
 }
 .layout-submenu li>a{
     padding:0px 0px 0px 5px;
     word-break:keep-all;
     white-space:nowrap;
     overflow:hidden;
     text-overflow:ellipsis;
     cursor:pointer;
 }

 .layout-submenu a {
 	display: block;
 	text-decoration: none;
 	color: #3d3a3a;
 	line-height:35px;
 }
 
  .layout-submenu li>a>span
 {
     color:Gray;
     font-size:9pt;
 }

 .layout-submenu li:hover {
 	background: #FFA7DB;
 	color: #FFF;
 }

