        .sys-box {
            width: 300px;
            height: 200px;
            text-align: center;
            word-wrap: break-word;
            //background-color: #434343;
            color: white;
            float: left;
            padding-top: 0px;
            //box-shadow: 1px 1px 1px #888888;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>
</head>
<body style="background-color:black">
    <div class="container-fluid" style="background-color: black;">
        <div class="row main" style="margin:25px">
            @*<img class="col-md-1" src="~/Content/img/logo-big-white.png" />*@
            <img class="col-md-1 openbtn " style="float: left; position: absolute; z-index: 1000; margin-left: 20px;" src="~/Content/img/logo-big-white.png" />
        </div>
        <div class="row" style="background-color: black;">
            <div class="col-sm-12" style="background-color: black;">
                <div id="Chart" style="height: 800px; background-color: black;"></div>
            </div>
        </div>
    </div>
    <script type="text/javascript">

    $(function () {
        $.post('@Url.Action("YieldLoad")', {}, function (result) {
            //console.log(result);
            loadChart(result, "Chart");
        })
    });

    function loadChart(data, divname) {
        var chart = echarts.init(document.getElementById(divname));
        linqobj = jslinq(data.Data);
        //debugger
        var xAxisData = linqobj.select(function (el) {
            return el.Item;
        }).toList();
        var serialData = linqobj.select(function (el) {
            return el.Second.toFixed(2);
        }).toList();
        var serialData2 = linqobj.select(function (el) {
            return el.Actual.toFixed(2);
        }).toList();

        var title = data.Title[0].Column1;
        debugger

        var option = {
            color: ['#f1b52c', '#009add'],
            tooltip: {
                show: true,
                trigger: 'axis',
                axisPointer: {
                    type: 'shadow'
                }
            },
            title: {
                text: title,
                subtext: '',
                left: 'center',
                textStyle: {
                    color: 'white'
                }
            },
            legend: {
                show: true,
                top: "bottom",
                padding: 5,
                textStyle: {
                    color: 'white'
                },
            },
            xAxis: {
                type: 'category',
                name: '',
                splitLine: { show: false },
                data: xAxisData,
                axisLabel: {
                    interval: 0,
                    rotate: "0",
                    color: 'white'
                },
                axisLine: {
                    lineStyle: {
                        color: '#fff',
                    },
                },
                nameTextStyle: {
                    color: "white",
                    fontSize: 12,
                    //padding: 10
                }
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                top: '6%',
                containLabel: true
            },
            yAxis: [
                {
                    type: 'value',
                    show: true,
                    name: '',
                    position: 'left',
                    nameLocation: 'end',
                    nameTextStyle: {
                        color: "blue",
                        fontSize: 12
                    },
                    axisLabel: {
                        color: 'white',
                        formatter: function (value, index) {
                            return value.toFixed(2)+'%';
                        }
                    },
                    axisTick: {
                        show: false
                    },
                    axisLine: {
                        show:false
                    },
                    splitNumber: 10,
                    splitLine: {
                        show: false,
                        color: 'white'
                    },
                    axisLine: {
                        lineStyle: {
                            color: '#fff',
                        },
                    },
                }
            ],
            series: [
                {
                    type: 'bar',
                    yAxisIndex: 0,
                    name: 'Second Yield',
                    data: serialData,
                    barGap: '40%',//不同系列的柱间距离，为百分比（如 '30%'，表示柱子宽度的 30%）
                    barMaxWidth: '30%',
                    emphasis: {
                        focus: 'series'
                    },
                    label: {
                        normal: {
                            show: true,
                            position: 'top',
                            formatter: '{c}%',
                            color: 'white'
                        }
                    }
                },
                {
                    type: 'bar',
                    yAxisIndex: 0,
                    name: 'Actual  ETE yield %',
                    data: serialData2,
                    barGap: '40%',
                    barMaxWidth: '30%',
                    emphasis: {
                        focus: 'series'
                    },
                    label: {
                        normal: {
                            show: true,
                            position: 'top',
                            formatter: '{c}%',
                            color: 'white'
                        }
                    }
                }
            ]
        }

        chart.setOption(option);


    }
    </script>

</body>
</html>