    <script type="text/javascript">

        $(function () {
            //console.log(222);
        $.post('@Url.Action("Getattrtionpicdata")', { timetype:1}, function (result) {
            console.log(result);
            loadChartByTime(result.Time, "byTime");
            loadChartByline(result.Line, "byLine");
        })
    })

    function loadChartByTime(data, divname) {
        var chart = echarts.init(document.getElementById(divname));
        linqobj = jslinq(data);
        //console.log(data);
        var barcolor = [];
        var xAxisData = linqobj.select(function (el) {
            return el.OperatioDate;
        }).toList();
        var serialData = linqobj.select(function (el) {
            return el.AttritionRate;
        }).toList();
        var linedata = linqobj.select(function (el) {
            return el.Target;
        }).toList();
        linqobj.any(function (el) {
            if (el.AttritionRate > el.Target) {
                barcolor.push('#ff0000');
                //return '#678AAD';
            } else {
                barcolor.push('blue');
                //return '#ff0000';
            }

        });

        var option = {
            tooltip: {
                show: true,
                trigger: 'axis',
                axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                    type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                }
            },
            legend:{
                show: true,
                bottom: "bottom",
                x: 'center',      //可设定图例在左、右、居中
                y: '430px',     //可设定图例在上、下、居中
                //padding: [60px, 0, 0, 0], 
                data: [
                    {
                        name: 'AttritionRate',
                        // 强制设置图形为圆。
                        icon: 'rect',
                        // 设置文本为红色
                        textStyle: {
                            color: 'white',
                            fontSize: 16,
                        }
                    },
                    {
                        name: 'Target',
                        // 强制设置图形为圆。
                        icon: 'rect',
                        // 设置文本为红色
                        textStyle: {
                            color: 'red',
                            fontSize: 16,
                    }
                    },
                ],
                textStyle: {
                    color: 'red',
                    fontSize: 12,
                }
            },
            xAxis: {
                type: 'category',
                name: 'x',
                splitLine: { show: false },
                data: xAxisData,
                axisLabel: {//坐标轴刻度标签的相关设置。
                    interval: 0,
                    rotate: "25"
                },
                axisLine: {
                    lineStyle: {
                        color: '#fff',
                        fontSize: 12,
                    },
                },

            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            yAxis: [
                {
                    show: true,
                    type:'value',
                    name: '抛料率%',
                    position: 'left',
                    nameLocation: 'end',
                    nameTextStyle: {
                        color: "white",
                        fontSize: 12,
                        //padding: 10
                    },
                    axisLine: {
                        show: true,
                        lineStyle: {
                            color: '#ff',
                        },
                    },
                }
            ],

            series: [
                {
                    type: 'bar',
                    yAxisIndex: 0,
                    name: 'AttritionRate',
                    data: serialData,
                    itemStyle: {
                        normal: {
                            color: function (param) {
                                return barcolor[param.dataIndex];
                            }
                        }
                    },
                    label: {
                        normal: {
                            show: true,
                            position: 'inside'
                        }
                    }
                },
                {
                    type: 'line',
                    yAxisIndex: 0,
                    name: 'Target',
                    data: linedata,
                    itemStyle: {
                        color: 'red'
                    },
                    label: {
                        normal: {
                            show: true,
                            //position: top,
                        }
                    }
                },
           ]
        }
        chart.setOption(option);
        return chart;
    }

