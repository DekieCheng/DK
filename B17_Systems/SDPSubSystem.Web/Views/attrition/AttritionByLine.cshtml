    <title>Attrition By Line </title>
    <style>
        .sys-box {
            width: 250px;
            height: 250px;
            margin: 5px;
            text-align: center;
            word-wrap: break-word;
            background-color: darkseagreen;
            color: white;
            float: left;
            padding-top: 25px;
            box-shadow: 3px 3px 5px #888888;
            border-radius: 3px;
            cursor: pointer;
        }

        td {
            color: #fff;
        }
    </style>
</head>
<body style="background-color:#2f353b">
    <div class="container-fluid">
        <div class="row" style="margin-top:10px">
            <img class="col-md-1" src="~/Content/img/logo-big-white.png" />
            <div class="search">
                <h1 class="bg-dark bg-font-dark col-md-11" style="margin-top:5px;padding-bottom:0px;text-align:center"><font color="white">Attrition By Line</font></h1>
            </div>
        </div>
     
        <div class="row" style="margin:0 0;padding:0 0;background-color:#2f353b;">
            <div class="col-sm-12" style="margin:0 0;padding:0 0;">
                
                    <div class="panel-body" style="background-color:#2f353b">
                        <div id="byTime" style="height:550px;"></div>
                    </div>
              
            </div>
        </div>
    </div>
    <input id="Line" hidden="hidden" value="@ViewData["Line"]"/>
    <script type="text/javascript">
        $(function () {
            $.post('@Url.Action("GetattritionDatabyLine")', { Line: $("#Line").val() }, function (result) {
            //console.log(result);
            loadChartByTime(result.attrition, "byTime");
        })
    })

    function loadChartByTime(data, divname) {
        var chart = echarts.init(document.getElementById(divname));
        linqobj = jslinq(data);
        var barcolor = [];
        var xAxisData = linqobj.select(function (el) {
            return el.operationdate;
        }).toList();
        var serialData = linqobj.select(function (el) {
            return el.attritionrate;
        }).toList();
        var linedata = linqobj.select(function (el) {
            return el.Target;
        }).toList();
        var linedata2 = linqobj.select(function (el) {
            return el.Target2;
        }).toList();
        linqobj.any(function (el) {
            if (el.attritionrate < el.Target) {
                barcolor.push('#678AAD');
            } else if (el.attritionrate >= el.Target2) {
                barcolor.push('#FF4500');
            } else {
                barcolor.push('#CDCD00');
            }
            
        });

        var TargetVal = linqobj.where(function (el) {
            return el.Target;
        }).firstOrDefault().Target;

        var TargetVal2 = linqobj.where(function (el) {
            return el.Target2;
        }).firstOrDefault().Target2;

        var option = {
            tooltip: {
                show: true,
                trigger: 'axis',
                axisPointer: {            
                    type: 'shadow'        
                }
            },
            legend:{
                show: true,
                top: "top",
                data: [
                    {
                        name: 'Attrition rate',
                        textStyle: {
                            color: '#00B2EE'
                        }
                    },
                    {
                        //name: TargetVal + '%',
                        name: 'Alarm',
                        textStyle: {
                            color: '#FFD700'
                        }
                    },
                    {
                        //name: TargetVal2+'%',
                        name: 'Target',
                        textStyle: {
                            color: '#EE2C2C'
                        }
                    }
                ],
            },
            xAxis: {
                type: 'category',
                name: '时间',
                splitLine: { show: false },
                data: xAxisData,
                axisLabel: {
                    interval: 0,
                    rotate: "25"
                },
                nameTextStyle: {
                    color: "#00B2EE",
                    fontSize: 12,
                },
                axisLine: {
                    lineStyle: {
                        color: '#fff',
                        fontSize: 12,
                    },
                },
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            toolbox: {
                feature: {
                    saveAsImage: {}
                }
            },
            yAxis: [
                {
                    show: true,
                    type:'value',
                    name: '抛料率%',
                    position: 'left',
                    nameLocation: 'end',
                    nameTextStyle: {
                        color: "#00B2EE",
                        fontSize: 12,
                        //padding: 10
                    },
                    axisLine: {
                        lineStyle: {
                            color: '#fff',
                        },
                    },
                }
            ],

            series: [
                {
                    type: 'bar',
                    yAxisIndex: 0,
                    name: 'Attrition rate',
                    data: serialData,
                    itemStyle: {
                        normal: {
                            color: function (param) {
                                return barcolor[param.dataIndex];
                            }
                        }
                    },
                    label: {
                        normal: {
                            show: true,
                            position: 'inside'
                        }
                    }
                },
                {
                    type: 'line',
                    yAxisIndex: 0,
                    //name: TargetVal + '%',
                    name: 'Alarm',
                    data: linedata,
                    itemStyle: {
                        color: '#FFD700'
                    },
                    label: {
                        normal: {
                            show: false,
                            //position: top,
                        }
                    }
                },
                {
                    type: 'line',
                    yAxisIndex: 0,
                    //name: TargetVal2 + '%',
                    name: 'Target',
                    data: linedata2,
                    itemStyle: {
                        color: '#EE2C2C'
                    },
                    label: {
                        normal: {
                            show: false,
                            //position: top,
                        }
                    }
                }
           ]
        }
        chart.setOption(option);
        
        return chart;
    }
        
    </script>

</body>
</html>