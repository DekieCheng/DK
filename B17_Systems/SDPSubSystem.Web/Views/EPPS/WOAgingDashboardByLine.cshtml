    <title>Work Order Status</title>
    <style>
        .sys-box {
            width: 250px;
            height: 250px;
            margin: 5px;
            text-align: center;
            word-wrap: break-word;
            background-color: darkseagreen;
            color: white;
            float: left;
            padding-top: 25px;
            box-shadow: 3px 3px 5px #888888;
            border-radius: 3px;
            cursor: pointer;
        }

        td {
            color: #fff;
        }

        body {
            overflow: auto;
        }
    </style>
</head>
<body style="background-color:#2f353b">
    <div class="container-fluid">
        <div class="row" style="margin-top:12px;padding-top:0px;">
            <h1 class="bg-dark bg-font-dark col-md-11" style="margin-top:0px;padding-bottom:0px;text-align:center"><font id="FGInventory" color="white"></font></h1>
        </div>
        <div class="row" style="margin-top:0px;padding-top:0px;">
            <div id="moneybar" style="width:100%;height:720px;padding-top:0px;">
            </div>
        </div>
    </div>
    <input id="Line" hidden="hidden" value="@ViewData["Line"]" />
    <script type="text/javascript">
        $(function () {
            
            $.post('@Url.Action("GetSMTWOAgingDatabyLine")', { Line: $("#Line").val() }, function (result) {
                //console.log(result);
                loadChart(result.aging, "moneybar");
            })
        })

        function loadChart(data, chartdiv) {
            linqobj = jslinq(data);
            //console.log(data);
            var title = linqobj.where(function (el) {
                return el.Title;
            }).firstOrDefault().Title;
            $("#FGInventory").html(title);

            var titleOfLeft = linqobj.where(function (el) {
                return el.Title;
            }).firstOrDefault().TitleOfLeft;

            var titleOfRight = linqobj.where(function (el) {
                return el.Title;
            }).firstOrDefault().TitleOfRight;

            var chart = echarts.init(document.getElementById(chartdiv));
            var xdata = linqobj.select(function (el) {
                return el.PlanDate;
            }).toList();
            var seriesdata = [];

            seriesdata.push({
                name: '<6H',
                type: 'bar',
                stack: 'ttt',
                itemStyle: {
                    color: '#00FF00',
                },
                label: {
                    show: true,
                    position: 'inside',
                    color: 'white',
                },
                barWidth: 50,
                data: linqobj.select(function (el) {
                    return el.Ag6;
                }).toList()

            });
            seriesdata.push({
                name: '6~12H',
                type: 'bar',
                stack: 'ttt',
                itemStyle: {
                    color: '#EEEE00',
                },
                label: {
                    show: true,
                    position: 'inside',
                    color: 'white',
                },
                barWidth: 50,
                data: linqobj.select(function (el) {
                    return el.Ag6T12;
                }).toList()
            });
            seriesdata.push({
                name: '>=12H',
                type: 'bar',
                stack: 'ttt',
                itemStyle: {
                    color: 'red',
                },
                label: {
                    show: true,
                    position: 'inside',
                    color: 'white',
                },
                barWidth: 50,
                data: linqobj.select(function (el) {
                    return el.Ag12;
                }).toList()
            });
            seriesdata.push({
                name: '总计',
                type: 'bar',
                stack: 'ttt',
                label: {
                    normal: {
                        offset: ['50', '80'],
                        show: true,
                        position: 'insideBottom',
                        formatter: '{c}',
                        textStyle: {
                            color: '#02FCFA',
                            fontWeight: 'bold',
                            fontStyle: 'oblique'
                        },

                    },

                },
                barWidth: 50,
                itemStyle: {
                    normal: {
                        color: 'rgba(128, 128, 128, 0)'
                        //color: 'red'
                    }
                },
                data: linqobj.select(function (el) {
                    return el.Total;
                }).toList()
            });
            seriesdata.push({
                name: titleOfRight,
                type: 'line',
                itemStyle: {
                    color: '#00EE76'
                },
                label: {
                    normal: {
                        show: true,
                        position: 'top',
                        formatter: '{c} %'
                    }
                },
                yAxisIndex: 1,
                data: linqobj.select(function (el) {
                    return el.PerAg6*100;
                }).toList()
            });

            option = {
                tooltip: {
                    trigger: 'axis',
                    axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                        type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                    }
                },
                legend: {
                    show: true,
                    top: 'bottom',
                    itemWidth: 10,
                    itemHeight: 10,
                    itemGap: 20,
                    padding: [5, 10],
                    data: [
                        {
                            name: '>=12H',
                            textStyle: {
                                color: 'white'
                            }
                        },
                        {
                            name: '6~12H',
                            textStyle: {
                                color: 'white'
                            }
                        },
                        {
                            name: '<6H',
                            textStyle: {
                                color: 'white'
                            }
                        },
                    ],
                },
                grid: {
                    top: '15%',
                    left: '3%',
                    right: '4%',
                    bottom: '13%',
                    containLabel: true
                },
                xAxis: [
                    {
                        type: 'category',
                        boundaryGap: true,
                        name: '',
                        axisLine: {
                            lineStyle: {
                                color: '#fff',
                            },
                        },
                        axisLabel: {
                            rotate: 0,
                        },
                        data: xdata
                    }
                ],
                yAxis: [
                    {
                        type: 'value',
                        name: titleOfLeft,
                        nameLocation: 'middle',
                        nameGap: 20,
                        nameRotate:90,
                        min: 0,
                        max: 10,
                        interval: 2,
                        position:'left',
                        axisLine: {
                            show: true,
                            lineStyle: {
                                color: '#fff',
                            },
                        },
                    },
                    {
                        type: 'value',
                        name: titleOfRight,
                        nameLocation: 'middle',
                        nameTextStyle: {
                            color:'#00EE76'
                        },
                        nameGap: 40,
                        nameRotate: -90,
                        min: 0,
                        max: 100,
                        interval: 20,
                        position:'right',
                        axisLine: {
                            show: true,
                            lineStyle: {
                                color: '#fff',
                            },
                            
                        },
                        axisLabel: {
                            formatter: '{value} %',
                            textStyle: { color: '#00EE76' }
                        },
                    }
                ],
                series: seriesdata
            };

            chart.setOption(option);
        }

    </script>

</body>
</html>