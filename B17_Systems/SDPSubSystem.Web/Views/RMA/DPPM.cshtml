@using SDPSubSystem.Web.Common;
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<script type="text/javascript">

    $(function () {

        window.open('http://172.30.11.214:8003/GHDReport/marketreturn', 'top');

        
    });



    $("#btnSearch").click(function () {
        update();
    });

    function update() {
        var strpost = {
            dateFrom: $("#dateFrom").val(),
            dateTo: $("#dateTo").val(),
            Customer: $("#Customer").val(),
            Model: $("#Model").val(),
        }
        $.post('@Url.Action("DashboardLoad")', { poststr: JSON.stringify(strpost) }, function (result) {
            //debugger
            //gentable(result.Data, "tab_table");
            loadChart(result, "line");
        });

    }


    function loadChart(data, divname) {
        var chart = echarts.init(document.getElementById(divname));
        var Data = data.Data;
        debugger
        var xDatat = [];
        var barDatat = [];
        var linedataForTargetT = [];
        $.each(Data, function (key, val) {
            debugger
            xDatat.push(val.Item);
            barDatat.push(val.qty);
            linedataForTargetT.push((val.ratio * 100).toFixed(2));
        });


        var option = {
            tooltip: {//提示文字的格式
                show: true,
                trigger: 'axis',
                axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                    type: 'line'        // 默认为直线，可选为：'line' | 'shadow'
                },
            },
            title: {
                text: 'RMA Defect Distribution Dashboard',
                subtext: '',
                left: 'center',
                textStyle: {
                    color: 'black'
                }
            },
            legend: {
                show: true,
                top: "bottom",
            },
            xAxis: {
                type: 'category',
                name: '',
                splitLine: { show: false },
                data: xDatat,
                //boundaryGap:false,
                axisLabel: {//坐标轴刻度标签的相关设置。
                    interval: 0,
                    rotate: "20"
                },
                nameTextStyle: {
                    color: "blue",
                    fontSize: 12,
                    //padding: 10
                }
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '10%',
                containLabel: true
            },
            //toolbox: {
            //    feature: {
            //        saveAsImage: {}
            //    }
            //},
            yAxis: [
                {
                    type: 'value',
                    show: true,
                    name: '',
                    position: 'left',
                    nameLocation: 'end',
                    nameTextStyle: {
                        color: "blue",
                        fontSize: 12,
                        //padding: 10
                    },
                    axisLabel: {
                        formatter: '{value}'
                    },
                    splitNumber: 6,
                    min: 0,
                    //max: 120,
                    splitLine: {
                        show: true
                    }
                },
                {
                    type: 'value',
                    show: true,
                    name: '',
                    position: 'right',
                    nameLocation: 'end',
                    nameTextStyle: {
                        color: "blue",
                        fontSize: 12,
                        //padding: 10
                    },
                    axisLabel: {
                        formatter: '{value}%'
                    },
                    splitNumber: 6,
                    min: 0,
                    //max: 120,
                    splitLine: {
                        show: false
                    }
                }],
            series: [
                {
                    type: 'bar',
                    yAxisIndex: 0,
                    name: 'Defect QTY',
                    data: barDatat,
                    itemStyle: {
                        normal: {
                            color: function (param) {
                                return '#009add';
                            }
                        }
                    },
                    label: {
                        normal: {
                            show: true,
                            position: 'inside',
                            color: 'white',
                            formatter: '{c}',
                            fontSize: 16
                        }
                    }
                },
                {
                    type: 'line',
                    yAxisIndex: 1,
                    name: 'F/R%',
                    symbol: 'circle',
                    symbolSize: 8,
                    lineStyle: {
                        color: 'orange',
                        width: 4,
                        //type: 'dashed'
                    },
                    data: linedataForTargetT,
                    itemStyle: {
                        color: 'orange'
                    },
                    label: {
                        normal: {
                            show: true,
                            position: 'insideTopRight',
                            formatter: (params) => {
                                //自定义逻辑，返回指定格式即可
                                return params.value == 0 ? "" : ['{img|' + params.value+'%}'];
                            },
                            //formatter: '{c}%',
                            color: 'red',
                            fontSize: 16,
                            rich: {
                                img: {
                                    //backgroundColor: {
                                    //    image: '/xx/xx.png' //注意路径带不带/
                                    //},
                                    backgroundColor: 'white',
                                    color: "red",
                                    height: 18,
                                    width: 38,
                                    borderColor: 'black',
                                    borderWidth: 1,
                                    borderType: 'solid',
                                    borderRadius:1,
                                    align: 'center'
                                }
                            }
                        }
                    }
                }
            ]
        }

        chart.setOption(option);
        return chart;
    }

</script>

